<html>
  <head>
    <meta charset="utf-8">
      <title>Camera</title>

      <% if not $develop_mode %>
        <meta http-equiv="Pragma" content="no-cache">
        <meta http-equiv="Cache-Control" content="no-cache">
        <meta http-equiv="Expires" content="-1">
      <% end %>
    </meta>

    <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/js/util.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
  </head>

  <body>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h3 id="device-file"></h3>
        <h6 id="device-name"></h3>
      </div>
    </div>

    <div id="main-area" class="d-flex d-flex-row">
      <div id="switches">
        <div class="form-grounp mt-3">
          <button id="action" class="btn btn-primary" disabled>STOP</button>
        </div>

        <div class="form-grounp mt-3">
          <button id="save-config" class="btn btn-primary">SAVE</button>
        </div>

        <div class="form-grounp mt-3">
          <button id="copy-url" class="btn btn-primary">COPY URL</button>
        </div>
      </div>

      <div id="preview">
        <div id="preview-wrapper" class="mx-3 my-3">
        <div id="state"></div>
        <canvas id="preview-canvas" width=320 height=240></canvas>
        </div>
      </div>

      <div id="config">
        <div class="mx-3 my-3">
          <div class="form-group">
            <label for="image-size">image size</label>
            <select id="image-size"
                class="form-control offset-1 col-11"></select>
          </div>

          <div class="form-group">
            <label for="framerate">framerate</label>
            <select id="framerate"
                class="form-control offset-1 col-11"></select>
          </div>

          <div id="controls">
          </div>
        </div>
      </div>
    </div>

    <%= render :erb, :"toast/save_complete" %>
    <%= render :erb, :"toast/url_copied" %>
    <%= render :erb, :"../../common/views/abort_shield" %>
  </body>
</html>
